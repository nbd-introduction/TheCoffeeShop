<style>
    :root {
        --primary: #6b4226;
        --primary-dark: #5a371f;
        --secondary: #a67c52;
        --accent: #d4a762;
        --accent-light: #e9d2b3;
        --light: #f9f5f0;
        --dark: #3c2415;
        --bg: #fcfaf7;
        --text: #333333;
        --text-light: #666666;
        --white: #ffffff;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--bg);
        color: var(--text);
        overflow-x: hidden;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        position: relative;
        z-index: 2;
    }

    /* Typography */
    h1, h2, h3, h4 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        margin: 0;
    }

    p {
        line-height: 1.8;
        margin: 0;
    }

    /* Buttons */
    .btn {
        display: inline-block;
        padding: 14px 30px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 16px;
        text-align: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: var(--white);
        box-shadow: 0 5px 15px rgba(107, 66, 38, 0.3);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-dark), var(--primary));
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(107, 66, 38, 0.4);
        }

    .btn-outline {
        background: transparent;
        color: var(--primary);
        border: 2px solid var(--primary);
    }

        .btn-outline:hover {
            background-color: var(--primary);
            color: var(--white);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(107, 66, 38, 0.2);
        }

    /* Section Styles */
    .section {
        padding: 100px 0;
        position: relative;
    }

    .section-title {
        font-size: 42px;
        margin-bottom: 20px;
        color: var(--dark);
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, var(--primary), var(--accent));
            border-radius: 3px;
        }

    .text-center .section-title::after {
        left: 50%;
        transform: translateX(-50%);
    }

    .section-description {
        max-width: 800px;
        margin: 30px auto;
        font-size: 18px;
        color: var(--text-light);
    }

    /* Hero Section */
    .hero-section {
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1495474472287-4d71bcdd2085?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: var(--white);
        padding: 180px 0;
        text-align: center;
        position: relative;
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
        animation: fadeInUp 1s ease-out;
    }

    .hero-subtitle {
        font-size: 18px;
        margin-bottom: 20px;
        letter-spacing: 3px;
        text-transform: uppercase;
        color: var(--accent);
        font-weight: 500;
    }

    .hero-title {
        font-size: 82px;
        font-weight: 700;
        margin-bottom: 30px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        letter-spacing: 2px;
    }

    .hero-description {
        font-size: 20px;
        margin-bottom: 40px;
        line-height: 1.8;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .hero-btn {
        padding: 16px 36px;
        font-size: 18px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    }

    /* Discover Section */
    .discover-section {
        padding: 120px 0;
        text-align: center;
        background-color: var(--white);
        position: relative;
        overflow: hidden;
    }

        .discover-section::before {
            content: '';
            position: absolute;
            top: -100px;
            left: -100px;
            width: 300px;
            height: 300px;
            background-color: var(--light);
            border-radius: 50%;
            opacity: 0.5;
            z-index: 1;
        }

        .discover-section::after {
            content: '';
            position: absolute;
            bottom: -100px;
            right: -100px;
            width: 300px;
            height: 300px;
            background-color: var(--light);
            border-radius: 50%;
            opacity: 0.5;
            z-index: 1;
        }

    /* Coffee Types Section */
    .coffee-types-section {
        padding: 120px 0;
        background-color: var(--light);
        position: relative;
    }

        .coffee-types-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: linear-gradient(to bottom, var(--white), var(--light));
        }

    .coffee-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 40px;
        margin-top: 60px;
    }

    .coffee-item {
        background-color: var(--white);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.4s ease;
        position: relative;
    }

        .coffee-item:hover {
            transform: translateY(-15px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
        }

    .coffee-img-container {
        position: relative;
        overflow: hidden;
        height: 220px;
    }

    .coffee-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s ease;
    }

    .coffee-item:hover .coffee-img {
        transform: scale(1.1);
    }

    .coffee-content {
        padding: 25px;
    }

    .coffee-item h3 {
        color: var(--dark);
        font-weight: 600;
        font-size: 22px;
        margin-bottom: 10px;
    }

    .coffee-price {
        color: var(--primary);
        font-weight: 700;
        font-size: 20px;
        margin-bottom: 20px;
        display: block;
    }

    .coffee-item .btn {
        width: 100%;
    }

    /* Features Section */
    .features-section {
        padding: 120px 0;
        background-color: var(--white);
        position: relative;
    }

        .features-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: linear-gradient(to bottom, var(--light), var(--white));
        }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 40px;
        margin-top: 60px;
    }

    .feature-item {
        text-align: center;
        padding: 40px 30px;
        border-radius: 20px;
        background-color: var(--white);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        transition: all 0.4s ease;
        position: relative;
        z-index: 1;
        overflow: hidden;
    }

        .feature-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--light), var(--accent-light));
            opacity: 0;
            z-index: -1;
            transition: opacity 0.4s ease;
        }

        .feature-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

            .feature-item:hover::before {
                opacity: 1;
            }

    .feature-icon {
        font-size: 46px;
        color: var(--primary);
        margin-bottom: 25px;
        transition: transform 0.4s ease;
    }

    .feature-item:hover .feature-icon {
        transform: scale(1.2);
        color: var(--secondary);
    }

    .feature-item h3 {
        margin-bottom: 15px;
        color: var(--dark);
        font-size: 22px;
        transition: color 0.4s ease;
    }

    .feature-item:hover h3 {
        color: var(--primary);
    }

    .feature-item p {
        color: var(--text-light);
        line-height: 1.7;
    }

    .cta-center {
        text-align: center;
        margin-top: 60px;
    }

    /* Promo Section */
    .promo-section {
        padding: 150px 0;
        background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('https://images.unsplash.com/photo-1442512595331-e89e73853f31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: var(--white);
        text-align: center;
        position: relative;
    }

    .promo-content {
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .promo-section .section-title {
        color: var(--white);
        margin-bottom: 30px;
    }

        .promo-section .section-title::after {
            background: linear-gradient(to right, var(--accent), var(--white));
        }

    .promo-description {
        margin-bottom: 40px;
        font-size: 20px;
        line-height: 1.8;
        color: rgba(255, 255, 255, 0.9);
    }

    /* Testimonial Section */
    .testimonial-section {
        padding: 120px 0;
        background-color: var(--light);
        position: relative;
    }

        .testimonial-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: linear-gradient(to bottom, var(--white), var(--light));
        }

    .testimonial-slider {
        max-width: 800px;
        margin: 60px auto 0;
        position: relative;
    }

    .testimonial-item {
        background-color: var(--white);
        padding: 50px;
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
        text-align: center;
        position: relative;
    }

    .quote {
        font-size: 100px;
        line-height: 1;
        color: var(--accent);
        font-family: 'Georgia', serif;
        position: absolute;
        top: 20px;
        left: 30px;
        opacity: 0.2;
    }

    .testimonial-text {
        font-size: 20px;
        line-height: 1.8;
        color: var(--text);
        margin-bottom: 40px;
        position: relative;
        z-index: 2;
        font-style: italic;
    }

    .testimonial-author {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .author-img {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        margin-right: 20px;
        border: 3px solid var(--accent-light);
    }

    .author-info h4 {
        margin: 0;
        color: var(--dark);
        font-size: 20px;
        font-weight: 600;
    }

    .author-info p {
        color: var(--text-light);
        margin-top: 5px;
    }

    .testimonial-controls {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .control-btn {
        background-color: var(--white);
        color: var(--primary);
        border: none;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin: 0 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .control-btn:hover {
            background-color: var(--primary);
            color: var(--white);
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        .control-btn i {
            font-size: 18px;
        }

    /* Subscribe Section */
    .subscribe-section {
        padding: 120px 0;
        background-color: var(--white);
        text-align: center;
        position: relative;
    }

        .subscribe-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: linear-gradient(to bottom, var(--light), var(--white));
        }

    .subscribe-description {
        max-width: 600px;
        margin: 30px auto 40px;
        color: var(--text-light);
        font-size: 18px;
    }

    .subscribe-form {
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        position: relative;
    }

    .subscribe-input {
        flex: 1;
        padding: 18px 25px;
        border: 2px solid #eee;
        border-radius: 50px;
        font-size: 16px;
        background-color: var(--white);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

        .subscribe-input:focus {
            border-color: var(--accent);
            outline: none;
            box-shadow: 0 5px 25px rgba(212, 167, 98, 0.2);
        }

    .subscribe-btn {
        position: absolute;
        right: 5px;
        top: 5px;
        bottom: 5px;
        padding: 0 30px;
        border-radius: 50px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: var(--white);
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .subscribe-btn:hover {
            background: linear-gradient(135deg, var(--primary-dark), var(--primary));
            box-shadow: 0 5px 15px rgba(107, 66, 38, 0.3);
        }

    /* Cart Button Styles */
    .cart-button {
        position: fixed;
        bottom: 40px;
        right: 40px;
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        z-index: 1000;
    }

        .cart-button:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            background: linear-gradient(135deg, var(--secondary), var(--primary));
        }

    .cart-icon {
        font-size: 28px;
    }

    .cart-count {
        position: absolute;
        top: -8px;
        right: -8px;
        background-color: #e74c3c;
        color: white;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        font-weight: bold;
        box-shadow: 0 3px 10px rgba(231, 76, 60, 0.5);
        border: 2px solid white;
    }

   

    }
</style>

