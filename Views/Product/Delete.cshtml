@model TheCoffeeShop.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<style>
    /* Màu sắc chủ đạo */
    :root {
        --primary: #6b4226;
        --secondary: #a67c52;
        --accent: #d4a762;
        --light: #f9f5f0;
        --dark: #3a2a18;
        --bg: #fcfaf7;
        --danger: #e74c3c;
        --danger-dark: #c0392b;
    }

    body {
        background-color: var(--bg);
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    /* Delete Section Styles */
    .delete-product-section {
        padding: 80px 0;
        background-color: var(--bg);
        background-image: url('https://images.unsplash.com/photo-1442512595331-e89e73853f31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        position: relative;
        min-height: 100vh;
    }

        .delete-product-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(252, 250, 247, 0.9);
            z-index: 1;
        }

    .container {
        position: relative;
        z-index: 2;
    }

    .delete-container {
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        padding: 50px;
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        overflow: hidden;
    }

        .delete-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 8px;
            background: linear-gradient(to right, var(--danger), var(--danger-dark));
        }

    .page-title {
        font-family: 'Playfair Display', serif;
        color: var(--danger);
        margin-bottom: 15px;
        text-align: center;
        font-size: 2.8rem;
        font-weight: 700;
    }

    .confirmation-message {
        color: #666;
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.2rem;
        font-weight: 500;
    }

    .form-divider {
        height: 3px;
        background: linear-gradient(to right, var(--danger), var(--danger-dark));
        width: 80px;
        margin: 0 auto 40px;
        border-radius: 3px;
    }

    /* Product Card */
    .product-card {
        background-color: var(--light);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .product-header {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
    }

    .product-image {
        width: 120px;
        height: 120px;
        border-radius: 15px;
        overflow: hidden;
        margin-right: 25px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border: 3px solid white;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .image-placeholder {
        color: var(--secondary);
        font-size: 3rem;
    }

    .product-title {
        flex: 1;
    }

        .product-title h2 {
            font-family: 'Playfair Display', serif;
            color: var(--dark);
            font-size: 1.8rem;
            margin-bottom: 5px;
        }

    .product-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--secondary);
    }

    .product-size {
        display: inline-block;
        background-color: var(--secondary);
        color: white;
        padding: 5px 15px;
        border-radius: 30px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-top: 10px;
    }

    .product-details {
        margin-top: 20px;
    }

    .detail-item {
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px dashed #ddd;
    }

        .detail-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .detail-label {
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 5px;
    }

    .detail-value {
        color: #666;
    }

    /* Warning Box */
    .warning-box {
        background-color: rgba(231, 76, 60, 0.1);
        border-left: 4px solid var(--danger);
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
    }

        .warning-box i {
            color: var(--danger);
            font-size: 1.5rem;
            margin-right: 10px;
        }

        .warning-box p {
            color: #555;
            margin: 0;
        }

    /* Button Styles */
    .btn {
        display: inline-block;
        padding: 15px 30px;
        border-radius: 50px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none;
        font-size: 1rem;
        letter-spacing: 0.5px;
    }

    .btn-danger {
        background: linear-gradient(135deg, var(--danger), var(--danger-dark));
        color: white;
        box-shadow: 0 5px 15px rgba(231, 76, 60, 0.3);
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, var(--danger-dark), #a93226);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(231, 76, 60, 0.4);
        }

    .btn-outline {
        background-color: transparent;
        color: var(--dark);
        border: 2px solid #ddd;
    }

        .btn-outline:hover {
            border-color: var(--secondary);
            color: var(--secondary);
            transform: translateY(-3px);
        }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
    }

    .back-link {
        color: #666;
        text-decoration: none;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        font-weight: 500;
        padding: 10px 20px;
        border-radius: 50px;
        border: 2px solid #eee;
    }

        .back-link:hover {
            color: var(--secondary);
            background-color: var(--light);
            border-color: var(--secondary);
            transform: translateY(-3px);
        }

        .back-link i {
            margin-right: 8px;
        }

   

    }
</style>

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<section class="delete-product-section">
    <div class="container">
        <div class="delete-container">
            <h1 class="page-title">Delete Product</h1>
            <p class="confirmation-message">Are you sure you want to delete this product?</p>
            <div class="form-divider"></div>

            <div class="warning-box">
                <p><i class="fas fa-exclamation-triangle"></i> This action cannot be undone. The product will be permanently removed from the database.</p>
            </div>

            <div class="product-card">
                <div class="product-header">
                    <div class="product-image">
                        @if (!string.IsNullOrEmpty(Model.ProductImage))
                        {
                            <img src="@Model.ProductImage" alt="@Model.ProductName" />
                        }
                        else
                        {
                            <div class="image-placeholder">
                                <i class="fas fa-coffee"></i>
                            </div>
                        }
                    </div>
                    <div class="product-title">
                        <h2>@Model.ProductName</h2>
                        <div class="product-price">@Model.ProductPrice.ToString("C")</div>
                        <div class="product-size">Size: @Model.Size</div>
                    </div>
                </div>

                <div class="product-details">
                    <div class="detail-item">
                        <div class="detail-label">Description</div>
                        <div class="detail-value">@Model.Description</div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">Category</div>
                        <div class="detail-value">@(Model.Category?.CategoryName ?? "Not specified")</div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">Product ID</div>
                        <div class="detail-value">@Model.ProductId</div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductId" />
                <div class="form-actions">
                    <a asp-action="Index" class="back-link">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this product?');">
                        <i class="fas fa-trash"></i> Delete Permanently
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>