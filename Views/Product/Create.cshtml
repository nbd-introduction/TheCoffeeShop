@model TheCoffeeShop.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<style>
    /* Form Styles */
    .create-product-section {
        padding: 60px 0;
        background-color: #f9f5f0;
        min-height: 100vh;
    }

    .form-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 30px;
        max-width: 800px;
        margin: 0 auto;
    }

    .page-title {
        font-family: 'Playfair Display', serif;
        color: #3a2a18;
        margin-bottom: 30px;
        text-align: center;
        font-size: 2.5rem;
    }

    .form-subtitle {
        color: #666;
        text-align: center;
        margin-bottom: 30px;
        font-size: 1.1rem;
    }

    .form-divider {
        height: 3px;
        background-color: #c8a97e;
        width: 80px;
        margin: 0 auto 40px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .control-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #3a2a18;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #c8a97e;
        outline: none;
        box-shadow: 0 0 0 3px rgba(200, 169, 126, 0.1);
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }

    /* Radio Button Styles */
    .size-options {
        display: flex;
        gap: 20px;
        margin-top: 10px;
    }

    .size-option {
        position: relative;
        cursor: pointer;
    }

    .size-radio {
        position: absolute;
        opacity: 0;
        cursor: pointer;
    }

    .size-label {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: white;
        border: 2px solid #ddd;
        color: #666;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .size-radio:checked + .size-label {
        background-color: #c8a97e;
        border-color: #c8a97e;
        color: white;
    }

    .size-radio:focus + .size-label {
        box-shadow: 0 0 0 3px rgba(200, 169, 126, 0.3);
    }

    /* Button Styles */
    .btn {
        display: inline-block;
        padding: 12px 25px;
        border-radius: 30px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #c8a97e;
        color: white;
    }

    .btn-primary:hover {
        background-color: #b69669;
    }

    .btn-outline {
        background-color: transparent;
        color: #3a2a18;
        border: 2px solid #ddd;
    }

    .btn-outline:hover {
        border-color: #c8a97e;
        color: #c8a97e;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 40px;
    }

    .back-link {
        color: #666;
        text-decoration: none;
        display: flex;
        align-items: center;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: #c8a97e;
    }

    .back-link i {
        margin-right: 5px;
    }


</style>

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<section class="create-product-section">
    <div class="container">
        <div class="form-container">
            <h1 class="page-title">Create New Product</h1>
            <p class="form-subtitle">Add a new coffee product to your menu</p>
            <div class="form-divider"></div>

            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

               
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductPrice" class="control-label">Price ($)</label>
                    <input asp-for="ProductPrice" class="form-control" placeholder="Enter price" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Size" class="control-label">Size</label>
                    <div class="size-options">
                        <label class="size-option">
                            <input type="radio" asp-for="Size" value="S" class="size-radio" />
                            <span class="size-label">S</span>
                        </label>
                        <label class="size-option">
                            <input type="radio" asp-for="Size" value="M" class="size-radio" checked />
                            <span class="size-label">M</span>
                        </label>
                        <label class="size-option">
                            <input type="radio" asp-for="Size" value="L" class="size-radio" />
                            <span class="size-label">L</span>
                        </label>
                    </div>
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductImage" class="control-label">Product Image URL</label>
                    <input asp-for="ProductImage" class="form-control" placeholder="Enter image URL" />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-actions">
                    <a asp-action="Index" class="back-link">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Product
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}