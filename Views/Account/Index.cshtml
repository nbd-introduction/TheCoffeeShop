@model IEnumerable<TheCoffeeShop.Models.Account>

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout";
}

<div class="container-fluid login-container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center py-4">
                    <h2 class="font-weight-bold">ĐĂNG NHẬP</h2>
                    <p class="mb-0">Chào mừng trở lại! Vui lòng đăng nhập để tiếp tục.</p>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Login" asp-controller="Account" method="post" class="needs-validation" novalidate>
                        <div class="form-group mb-4">
                            <label for="username" class="form-label">Tên đăng nhập</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Nhập tên đăng nhập" required>
                                <div class="invalid-feedback">Vui lòng nhập tên đăng nhập</div>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" required>
                                <button class="btn btn-toggle" type="button" id="togglePassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <div class="invalid-feedback">Vui lòng nhập mật khẩu</div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                                <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
                            </div>
                            <a href="/Account/ForgotPassword" class="link-accent">Quên mật khẩu?</a>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-accent btn-lg">Đăng nhập</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="mb-0">Chưa có tài khoản? <a href="/Account/Register" class="link-accent">Đăng ký ngay</a></p>
                </div>
            </div>
            <div class="text-center mt-4 text-white">
                <p>&copy; @DateTime.Now.Year - The Coffee Shop</p>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --dark-bg: #121212;
        --card-bg: #1e1e1e;
        --card-header: #252525;
        --card-footer: #252525;
        --text-primary: #e0e0e0;
        --text-secondary: #a0a0a0;
        --accent: #c8a97e;
        --accent-hover: #b69669;
        --input-bg: #2d2d2d;
        --input-border: #3d3d3d;
        --input-text: #e0e0e0;
    }

    body {
        background-color: var(--dark-bg);
        color: var(--text-primary);
        font-family: 'Poppins', sans-serif;
    }

    .login-container {
        background-image: url('https://images.unsplash.com/photo-1509785307050-d4066910ec1e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1928&q=80');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        min-height: 100vh;
    }

        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.7) 100%);
            z-index: 1;
        }

        .login-container .row {
            position: relative;
            z-index: 2;
        }

    .card {
        overflow: hidden;
        border-radius: 20px;
        backdrop-filter: blur(10px);
        background-color: rgba(30, 30, 30, 0.85);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        transform: translateY(0);
        transition: all 0.5s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.6);
        }

    .card-header {
        background-color: var(--card-header);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text-primary);
        padding: 25px 20px;
    }

        .card-header h2 {
            color: var(--accent);
            font-weight: 700;
            letter-spacing: 2px;
            margin-bottom: 15px;
            font-size: 28px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .card-header p {
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

    .card-body {
        background-color: var(--card-bg);
        padding: 40px 30px;
    }

    .card-footer {
        background-color: var(--card-footer);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text-secondary);
        padding: 20px;
    }

    .form-label {
        color: var(--text-primary);
        font-weight: 500;
        margin-bottom: 10px;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
    }

    .input-group {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        .input-group:focus-within {
            box-shadow: 0 5px 20px rgba(200, 169, 126, 0.3);
        }

    .input-group-text {
        background-color: var(--input-bg);
        border: 1px solid var(--input-border);
        border-right: none;
        color: var(--accent);
        padding: 12px 15px;
        font-size: 18px;
    }

    .form-control {
        background-color: var(--input-bg);
        border: 1px solid var(--input-border);
        border-left: none;
        color: var(--input-text);
        caret-color: var(--accent);
        padding: 12px 15px;
        font-size: 16px;
        height: auto;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background-color: var(--input-bg);
            box-shadow: none;
            border-color: var(--input-border);
            color: var(--input-text);
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.4);
            font-style: italic;
        }

    .btn-toggle {
        background-color: var(--input-bg);
        border: 1px solid var(--input-border);
        border-left: none;
        color: var(--accent);
        padding: 0 15px;
        font-size: 18px;
        transition: all 0.3s ease;
    }

        .btn-toggle:hover {
            color: var(--accent-hover);
            background-color: rgba(45, 45, 45, 0.9);
        }

    .btn-accent {
        background: linear-gradient(135deg, var(--accent), var(--accent-hover));
        border: none;
        color: #121212;
        font-weight: 600;
        letter-spacing: 1px;
        padding: 14px 20px;
        border-radius: 12px;
        transition: all 0.4s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        position: relative;
        overflow: hidden;
    }

        .btn-accent::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: all 0.6s ease;
        }

        .btn-accent:hover {
            background: linear-gradient(135deg, var(--accent-hover), var(--accent));
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(200, 169, 126, 0.4);
        }

            .btn-accent:hover::before {
                left: 100%;
            }

    .form-check-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
        padding-left: 5px;
    }

    .form-check-input {
        background-color: var(--input-bg);
        border-color: var(--input-border);
        width: 18px;
        height: 18px;
        margin-top: 0.2rem;
    }

        .form-check-input:checked {
            background-color: var(--accent);
            border-color: var(--accent);
        }

    .link-accent {
        color: var(--accent);
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
        position: relative;
    }

        .link-accent::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background-color: var(--accent);
            transition: width 0.3s ease;
        }

        .link-accent:hover {
            color: var(--accent-hover);
        }

            .link-accent:hover::after {
                width: 100%;
            }

    .invalid-feedback {
        color: #e57373;
        font-size: 0.85rem;
        margin-top: 5px;
    }

  

    }
</style>

@section Scripts {
    <script>
        // Hiển thị/ẩn mật khẩu
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('password');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        // Xác thực form
        (function() {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Hiệu ứng ripple cho nút đăng nhập
        document.querySelector('.btn-accent').addEventListener('click', function(e) {
            const button = this;

            // Tạo hiệu ứng ripple
            const ripple = document.createElement('span');
            ripple.classList.add('ripple');

            // Đặt vị trí của ripple tại điểm click
            const rect = button.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;

            ripple.style.left = x + 'px';
            ripple.style.top = y + 'px';

            // Thêm ripple vào nút
            button.appendChild(ripple);

            // Xóa ripple sau khi hoàn thành animation
            setTimeout(() => {
                ripple.remove();
            }, 600);
        });
    </script>

    <style>
        /* Hiệu ứng ripple cho nút */
        .btn-accent {
            position: relative;
            overflow: hidden;
        }

        .ripple {
            position: absolute;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.4);
            transform: scale(0);
            animation: ripple 0.6s linear;
            pointer-events: none;
        }

      
    </style>
}