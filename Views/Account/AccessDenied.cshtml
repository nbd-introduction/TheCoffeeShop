@{
    ViewBag.Title = "Access Denied";
}

<div class="access-denied-container">
    <div class="access-denied-card">
        <div class="icon-container">
            <i class="fas fa-exclamation-circle"></i>
        </div>
        <h2 class="title">Truy cập bị từ chối</h2>
        <p class="message">Bạn không có quyền truy cập trang này. Vui lòng quay lại trang chủ.</p>
        <a href="@Url.Action("Index", "Account")" class="return-button">Quay về trang chủ</a>
    </div>
</div>

<style>
    .access-denied-container {
        display: flex;
        min-height: 100vh;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .access-denied-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
        max-width: 450px;
        width: 100%;
    }

    .icon-container {
        background-color: #fee2e2;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

        .icon-container i {
            font-size: 40px;
            color: #dc2626;
        }

    .title {
        color: #dc2626;
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 16px;
    }

    .message {
        color: #4b5563;
        margin-bottom: 24px;
        line-height: 1.5;
    }

    .return-button {
        display: inline-block;
        background-color: #2563eb;
        color: white;
        padding: 12px 24px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.2s;
    }

        .return-button:hover {
            background-color: #1d4ed8;
            color: white;
        }
</style>

<!-- Add Font Awesome for the icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">