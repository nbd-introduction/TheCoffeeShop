<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Coffee Shop</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="cart-button-container">
        <a href="@Url.Action("Index", "ShoppingCart")" class="cart-button">
            <i class="fas fa-shopping-cart"></i>
            <span class="cart-count">@(ViewBag.CartCount ?? 0)</span>
        </a>
    </div>
    <header>
        <div class="container">
            <nav class="main-nav">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")">Coffee Shop</a>
                </div>
                <ul class="nav-links">
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Menu", "Product")">Menu</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
                <div class="cart">
                    <a href="#" class="btn btn-primary">Shop Now</a>
                </div>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">
                    <h3>Coffee Shop</h3>
                    <p>Your perfect coffee experience</p>
                </div>
                <div class="footer-links">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Menu</a></li>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-contact">
                    <h4>Contact Us</h4>
                    <p><i class="fas fa-map-marker-alt"></i> 123 Coffee Street, City</p>
                    <p><i class="fas fa-phone"></i> +1 234 567 890</p>
                    <p><i class="fas fa-envelope"></i> info@coffeeshop.com</p>
                </div>
                <div class="footer-social">
                    <h4>Follow Us</h4>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year Coffee Shop. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/site.js"></script>
    @RenderSection("scripts", required: false)
    

    <style>
        .cart-button-container {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 9999;
        }

        .cart-button {
            display: block;
            width: 60px;
            height: 60px;
            background-color: #6b4226;
            color: white !important;
            border-radius: 50%;
            text-align: center;
            line-height: 60px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            position: relative;
        }

            .cart-button:hover {
                background-color: #3c2415;
                text-decoration: none;
            }

            .cart-button i {
                font-size: 24px;
            }

        .cart-count {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: #dc3545;
            color: white;
            width: 22px;
            height: 22px;
            border-radius: 50%;
            font-size: 12px;
            font-weight: bold;
            display: inline-block;
            text-align: center;
            line-height: 22px;
        }
    </style>

    <script>
        // Đảm bảo số lượng hiển thị đúng khi trang tải
        document.addEventListener('DOMContentLoaded', function() {
            // Lấy số lượng từ server thông qua AJAX
            fetch('@Url.Action("GetCartCount", "Cart")')
                .then(response => response.json())
                .then(data => {
                    document.querySelector('.cart-count').textContent = data.count;
                })
                .catch(error => console.error('Error:', error));
        });
    </script>
</body>
</html>